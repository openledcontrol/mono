{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "lib"
  ],
  "paths": {
    "@openledcontrol/core": ["packages/core"],
    "@openledcontrol/raspberrypi": ["packages/raspberrypi"],
    "@openledcontrol/rest": ["packages/rest"]
  }
}